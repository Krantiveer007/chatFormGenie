{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core": [
        "app/core"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@shared": [
        "app/shared"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@theme": [
        "app/theme"
      ],
      "@theme/*": [
        "app/theme/*"
      ],
      "@testing": [
        "testing"
      ],
      "@testing/*": [
        "testing/*"
      ],
      "@env": [
        "environments"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@dpw/*": [
        "@dpw/*"
      ]
    },
    "useDefineForClassFields": false,
    "jsx": "react-jsx",
  }
}